{% extends "base.html.twig" %}
{% form_theme action_form "form/fields.html.twig" %}

{% block body %}
    {% include "default/navigation.html.twig" %}

    <div class="row">
        <div class="col-md-9" id="cert_list">
            <div class="cert_loader text-center">
                <img src="{{ asset("img/ring-alt.gif") }}" alt="Загрузка" width="40" height="40">
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Обработка сертификатов</h4>
                </div>
                <div class="panel-body">
                    {#{{ form_start(action_form) }}#}
                    {#{{ form_widget(action_form) }}#}
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle col-md-12" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Выбрать действие
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                        </ul>
                    </div>
                    <br><br><br>
                    <button type="submit" class="btn btn-primary pull-right" onclick="ActionWithCertsBtn()">Выполнить</button>
                    {#{{ form_end(action_form) }}#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset("js/view_certificates.js") }}" type="application/javascript"></script>
{% endblock %}